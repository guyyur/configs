# .shrc - bourne shell startup file (for interactive shell)
#


# -- prompt --
PS1="[$USER@`hostname -s`]# "


# -- options --
set -o emacs


# -- history --
HISTSIZE=500


# -- aliases --
alias la='ls -A'
alias lf='ls -F'
alias ll='ls -l'
alias cp='cp -i'
alias mv='mv -i'
alias grep='grep --color=auto'
alias whereis='whereis -x'
