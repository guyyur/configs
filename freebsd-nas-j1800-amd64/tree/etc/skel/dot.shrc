#
# .shrc - bourne shell startup file (for interactive shell)
#


# -- prompt --
PS1="[$USER@`hostname -s`]"
if [ ! "`id -u`" = "0" ]; then
  PS1="${PS1}$ "
else
  PS1="${PS1}# "
fi


# -- options --
set -o emacs


# -- history --
HISTSIZE=500


# -- aliases --
alias la='ls -A'
alias lf='ls -F'
alias ll='ls -l'
alias cp='cp -i'
alias mv='mv -i'
alias whereis='whereis -x'
