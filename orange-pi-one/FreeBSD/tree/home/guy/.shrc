#
# .shrc - bourne shell startup file (for interactive shell)
#


# -- prompt --
PS1="[\h:\w]\\$ "


# -- history --
HISTSIZE=500
case "$KSH_VERSION" in Version*)
  HISTFILE=/dev/null;;
esac


# -- aliases --
alias la='ls -A'
alias lf='ls -F'
alias ll='ls -l'
alias cp='cp -i'
alias mv='mv -i'
alias grep='grep --color=auto'
alias whereis='whereis -x'
