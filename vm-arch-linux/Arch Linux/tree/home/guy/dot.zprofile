
# -- locale --
export LANG=en_US.UTF-8
export LC_COLLATE=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_MESSAGES=en_US.UTF-8
export LC_MONETARY=he_IL.UTF-8
export LC_NUMERIC=en_US.UTF-8
export LC_TIME=en_AU.UTF-8
export LC_PAPER=he_IL.UTF-8
export LC_NAME=en_US.UTF-8
export LC_ADDRESS=C
export LC_TELEPHONE=he_IL.UTF-8
export LC_MEASUREMENT=he_IL.UTF-8
export LC_IDENTIFICATION=C


# -- EDITOR, VISUAL env vars --
export EDITOR=nano
export VISUAL="${EDITOR}"


# -- PAGER env var --
export PAGER=less


# -- less env vars --
export LESS="-QR"
export LESSHISTFILE="-"


# -- set XDG env vars --
export XDG_CONFIG_HOME=$HOME/config
export XDG_CACHE_HOME=/var/xdg-cache/"$USER"
